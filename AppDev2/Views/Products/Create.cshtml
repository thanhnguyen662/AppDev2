@model AppDev2.Models.Product

@{
	ViewBag.Title = "Create";
}

<h2>Create a new Product</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Products", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(p => p.Name)
		@Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Price)
		@Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Price, "", new { @class = "text-danger" })
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
}